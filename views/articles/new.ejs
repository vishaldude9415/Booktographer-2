    <title>Blog</title>
</head>
<body>
    <div class="container">
        <h1 class="mb-4" >New Article</h1>
        <form action="/articles" method="POST" enctype="multipart/form-data">
        <div class="form- mb-4">
            <label for="title">Title</label>
            <input required value = "<%= article.title %>" type="text" name="title" id="title" class="form-control">
        </div>

        <div class="form-group mb-4">
            <label for="description">Description</label>
            <textarea required type="text" name="description" id="description" class="form-control"><%= article.description %></textarea>
        </div>

        <div class="form-group mb-4">
            <label for="title">Markdown</label>
            <textarea required name="markdown" id="markdown" class="form-control" ><%= article.markdown %></textarea>
        </div>

        <div class="form-group mb-4">
            <label for="image" >Image</label>
            <input type="file" name="image" id="image" class="form-control-file" />
        </div>
        <div class="form-group mb-4">
            <label for="image" >Image</label>
            <input type="file" name="image" id="image" class="form-control-file" />
        </div>
        <a href="/" class="btn btn-secondary" >Cancel</a>

        <button type="submit" class="btn btn-primary">Save</button>
        </form>

    </div>
</body>
</html>